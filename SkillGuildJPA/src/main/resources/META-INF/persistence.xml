<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="SkillGuildJPA">
	
	<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    
    <!-- Begin Entities Here -->
    <class>com.skilldistillery.skillguild.entities.Category</class>
    <class>com.skilldistillery.skillguild.entities.Comment</class>
    <class>com.skilldistillery.skillguild.entities.Content</class>
    <class>com.skilldistillery.skillguild.entities.Guild</class>
    <class>com.skilldistillery.skillguild.entities.Interaction</class>
    <class>com.skilldistillery.skillguild.entities.InteractionType</class>
    <class>com.skilldistillery.skillguild.entities.Member</class>
    <class>com.skilldistillery.skillguild.entities.MemberId</class>
    <class>com.skilldistillery.skillguild.entities.Question</class>
    <class>com.skilldistillery.skillguild.entities.Resource</class>
    <class>com.skilldistillery.skillguild.entities.ResourceType</class>
    <class>com.skilldistillery.skillguild.entities.Status</class>
    <class>com.skilldistillery.skillguild.entities.Topic</class>
    <class>com.skilldistillery.skillguild.entities.User</class>
    <!-- End Entities Here -->

    <properties>
    
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/skillguilddb?useSSL=false&amp;useLegacyDatetimeCode=false&amp;serverTimezone=US/Mountain" />
      <property name="javax.persistence.jdbc.user" value="skillguilduser"/>
      <property name="javax.persistence.jdbc.password" value="skillguilduser" />
      <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />

      <property name="hibernate.show_sql" value="false" />
      <property name="hibernate.format_sql" value="false" />

      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
      <property name="hibernate.connection.provider_class" value="org.hibernate.connection.C3P0ConnectionProvider" />

      <property name="hibernate.c3p0.max_size" value="5" />
      <property name="hibernate.c3p0.min_size" value="0" />
      <property name="hibernate.c3p0.acquire_increment" value="1" />
      <property name="hibernate.c3p0.idle_test_period" value="300"/>
      <property name="hibernate.c3p0.max_statements" value="0" />
      <property name="hibernate.c3p0.timeout" value="60" />
      
    </properties>

	
	</persistence-unit>
</persistence>
